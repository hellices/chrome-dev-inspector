{
  "name": "hovercomp-dev-inspector",
  "version": "1.0.7",
  "description": "Chrome extension for inspecting framework components on hover with advanced tracking and profiling",
  "scripts": {
    "test": "jest",
    "test:e2e": "npx playwright test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "node build.js",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"**/*.{js,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,css}\""
  },
  "keywords": [
    "chrome-extension",
    "developer-tools",
    "react",
    "vue",
    "angular",
    "web-components"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.58.2",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "terser": "^5.44.1"
  }
}
